import csv

# Ask user for filename
# filename = input("Enter filename or press enter for default (ChilliwackTerrainCodes.csv): ")
# if filename == "":
#     filename = "ChilliwackTerrainCodes.csv"

filename = "ChilliwackTerrainCodes.csv"


# Ask user for character to check against
#check_against_this_character = input("Enter a single character to check against: ")

# open the csv file and read its contents
with open(filename) as csvfile:
    reader = csv.DictReader(csvfile)
    
    # create a dictionary to store the count of characters that appear after the "-" and "/" symbols
    char_counts = {}
    
    # iterate over each row in the csv file
    for row in reader:
        # get the value of the "terrain" column
        terrain_str = row["terrain"]
        
        # loop through each character in the string and count the characters that appear after the "-" and "/" symbols
        for i in range(len(terrain_str)):
            if terrain_str[i] == "-":
                # increment the count for the character that follows the "-" or "/" symbol
                char = terrain_str[i+1]
                if char in char_counts:
                    char_counts[char] += 1
                else:
                    char_counts[char] = 1

# print the character counts
print(f"Frequency of Characters after - ")
for char, count in char_counts.items():
    print(f"{char}: {count}")

with open(filename) as csvfile:
    reader = csv.DictReader(csvfile)
    
    # create a dictionary to store the count of characters that appear after the "-" and "/" symbols
    char_counts = {}
    
    # iterate over each row in the csv file
    for row in reader:
        # get the value of the "terrain" column
        terrain_str = row["terrain"]
        
        # loop through each character in the string and count the characters that appear after the "-" and "/" symbols
        for i in range(len(terrain_str)):
            if terrain_str[i] == "/":
                # increment the count for the character that follows the "-" or "/" symbol
                char = terrain_str[i+1]
                if char in char_counts:
                    char_counts[char] += 1
                else:
                    char_counts[char] = 1

# print the character counts
print(f"Frequency of Characters after / ")
for char, count in char_counts.items():
    print(f"{char}: {count}")

# Initialize counters for number of strings with 1, 2, and 3 hyphens
one_hyphen_count = 0
two_hyphen_count = 0
three_hyphen_count = 0

# Open CSV file and read in data
with open(filename, newline='') as csvfile:
    terrain_data = csv.DictReader(csvfile)
    for row in terrain_data:
        terrain_string = row["terrain"]
        if terrain_string.count("-") == 1:
            one_hyphen_count += 1
        elif terrain_string.count("-") == 2:
            two_hyphen_count += 1
        elif terrain_string.count("-") == 3:
            three_hyphen_count += 1

# Print out results
print(f"Number of strings with 1 hyphen: {one_hyphen_count}")
print(f"Number of strings with 2 hyphens: {two_hyphen_count}")
print(f"Number of strings with 3 hyphens: {three_hyphen_count}")
    
# Open the CSV file and read the contents
with open(filename, newline="") as csvfile:
    reader = csv.DictReader(csvfile)
    count_list = []

    # Iterate over each row and count the number of "/" characters in the "terrain" column
    for row in reader:
        count = row["terrain"].count("/")
        count_list.append(count)
        count = row["terrain"].count("=")
        count_list.append(count)

    # Print the highest number of "/" counted
    print("The highest number of '/' and '=' counted is:", max(count_list))